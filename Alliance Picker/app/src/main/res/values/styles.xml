<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="QuestionViewStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">32dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_column">0</item>
    </style>

    <style name="TextEditStyle">
        <item name="android:layout_span">32</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:ems">10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TableRowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RatingBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_column">1</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="my_style">
       <!-- <item name="android:layout_span">32</item> -->
        <item name="android:layout_gravity">left</item>
        <!--<item name="android:ems">10</item> -->
        <item name="android:paddingTop">15dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
